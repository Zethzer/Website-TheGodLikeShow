{% trans_default_domain 'FOSUserBundle' %}

<h2>Modifier le mot de passe</h2>
<hr />
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal col-md-12">
	{# Les erreurs générales du formulaire. #}
	{{ form_errors(form) }}
	<div class="form-group row">
		{{ form_label(form.current_password, "Mot de passe", {'label_attr': {'class': 'col-md-3'}}) }}
		{{ form_errors(form.current_password) }}
		<div class="col-md-9">
			{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	<div class="form-group row">
		{{ form_label(form.plainPassword.first, "Nouveau mot de passe", {'label_attr': {'class': 'col-md-3'}}) }}
		{{ form_errors(form.plainPassword.first) }}
		<div class="col-md-9">
			{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	<div class="form-group row">
		{{ form_label(form.plainPassword.second, "Vérification", {'label_attr': {'class': 'col-md-3'}}) }}
		{{ form_errors(form.plainPassword.second) }}
		<div class="col-md-9">
			{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	{{ form_rest(form) }}
	<div class="row">
		<button type="submit" class="form-control btn btn-success" id="boutonFinal"><span class="glyphicon glyphicon-ok col-md-3"></span> Modifier</button>
	</div>
</form>
